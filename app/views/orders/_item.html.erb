
<h2>
  <%= product.name %> 
  <small class=text-right>(X <%= quantity %>)</small>
</h2>
<table class=table>
  <tr>
    <td>
      <%= image_tag product.image.tiny %>
    </td>
    <td>
      <%= product.description %>
    </td>
  </tr>
</table>
<h4>
  <small>Unit Price:</small>
  <%= humanized_money_with_symbol product.price %>
	<small>Total Price:</small>
  <%= humanized_money_with_symbol product.price * quantity %>
</h4>